<h1>Candidate jobs</h1>

<p><%= link_to 'Add a New Candidate Job', new_candidate_job_url %></p>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th>Job</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @candidate_jobs.each do |candidate_job| %>
    <tr>
      <td><%= candidate_job.candidate_id %></td>
      <td><%= candidate_job.job_id %></td>
  
      <td><%= link_to 'Show', candidate_job_url(candidate_job) %></td>
      <td><%= link_to 'Edit', edit_candidate_job_url(candidate_job) %></td>
      <td><%= link_to 'Destroy', candidate_job_url(candidate_job), method: 'delete', data: { confirm: "Do you really want to delete this candidate_job?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

