<h1>Recruiters</h1>

<p><%= link_to 'Add a New Recruiter', new_recruiter_url %></p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Agency</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @recruiters.each do |recruiter| %>
    <tr>
      <td><%= recruiter.first_name %></td>
      <td><%= recruiter.last_name %></td>
      <td><%= recruiter.try(:recruiter_attribute).try(:title) %></td>
      <td><%= recruiter.try(:recruiter_attribute).try(:agency).try(:name) %></td>
      <td><%= recruiter.email %></td>

      <td><%= link_to 'Show', recruiter_url(recruiter) %></td>
      <td><%= link_to 'Edit', edit_recruiter_url(recruiter) %></td>
      <td><%= link_to 'Destroy', recruiter_url(recruiter), method: 'delete', data: { confirm: "Do you really want to delete this recruiter?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

