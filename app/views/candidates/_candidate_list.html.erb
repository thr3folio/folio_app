<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>Industry</th>
      <th>Years experience</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% candidates.each do |candidate| %>
    <tr>
      <td><%= candidate.first_name %></td>
      <td><%= candidate.last_name %></td>
      <td><%= candidate.try(:candidate_attribute).try(:title) %></td>
      <td><%= candidate.try(:candidate_attribute).try(:industry) %></td>
      <td><%= candidate.try(:candidate_attribute).try(:years_experience) %></td>

      <td><%= link_to 'View', candidate_url(candidate) %></td>
      <td><%= link_to 'Edit', edit_candidate_url(candidate) %></td>
      <td><%= link_to 'Delete', candidate_url(candidate), method: 'delete', data: { confirm: "Do you really want to delete this candidate?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
