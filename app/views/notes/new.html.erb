<h1>New Note</h1>


<%= form_tag(notes_url, method: 'post') do %>


  <div>
    <%= label_tag :description %><br />
    <%= text_field_tag :description %>
  </div>

    <div>
    <%= label_tag :date %><br />
    <%= text_field_tag :date %>
  </div>

    <div>
    <%= label_tag :job_id %><br />
    <%= number_field_tag :job_id %>
  </div>


  <div>
    <%= submit_tag "Create Note" %>
  </div>
<% end %>
